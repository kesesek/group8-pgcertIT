<div class="sort-container">
    <form action="./sortArticles" method="get">
        <label for="sortForm">Sort article lists by article title, author or date if you want: </label>
        <select name="sort" id="sortForm">
            <option value="title">Title</option>
            <option value="author">Author</option>
            <option value="datestamp">date</option>
        </select>
        <button type="submit">Sort!</button>
    </form>
</div>

<div class="main-container">
    <div class="main-content">
        <div class="grid-articles">
            {{#each article}}
            <div class="grid-content">
                <div class="card">
                    <br>
                    <h3>{{{this.title}}}</h3>
                    <p>{{this.author}}</p>
                    <p>{{this.datestamp}}</p>
                    <div class="limit_container">
                        <p class="limit_content">{{{this.content}}}</p>
                    </div>
                    <div class="actions">
                        <form action="./article" method="get">
                            <button type="submit" class="readMore" name="fullArticle" value="{{this.id}}">Read more</button>
                        </form>
                        <div class="favorite">
                            {{#if this.user_id}}
                            <form action="./removeLikedArticles" method="get">
                                <button type="submit" class="likes" name="likeAction" value="{{this.id}}"><img src="./images/black favorite.png" width="40px"></button>
                            </form>
                            {{else}}
                            <form action="./addLikedArticles" method="get">
                                <button type="submit" class="likes" name="likeAction" value="{{this.id}}"><img src="./images/outline favorite.png" width="40px"></button>
                            </form>
                            {{/if}}
                        </div>
                    </div>
                    
                </div>
            </div>
            {{/each}}
        </div>   
    </div>
</div>