<div class="main-container">
    <div class="main-content">
        {{#if articles}}
        <div class="grid-favArticles">
            {{#each articles}}
            <div class="grid-content">
                <div class="card2">
                    <h3>{{{this.title}}}</h3>
                    <p>{{this.authorname}}</p>
                    <p>{{this.date_time}}</p>
                    <p>{{{this.content}}}</p>
                    <div class="actions">
                        <form action="./article" method="get">
                            <button type="submit" class="readMore" name="fullArticle" value="{{this.id}}">Read
                                more</button>
                        </form>
                        <div class="favorite">
                            <form action="./removeLikes" method="get">
                                <button type="submit" class="likes" name="likeAction" value="{{this.id}}"><img
                                        src="./images/black favorite.png" width="40px"></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p class="nonefav">No more favorite articles~</p>
        {{/if}}
    </div>
</div>