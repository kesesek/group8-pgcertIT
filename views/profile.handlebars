<div class="main-container">
        {{#if T}}
        <div class="otherUserProfile">
            <ul>
                <li><img src="images/icons/{{T.icon_filename}}" width="40px"></li>
                <li>Username: {{T.username}}</li>
                <li>Name: {{T.fname}} {{T.mname}} {{T.lname}}</li>
                <li>Description: {{T.description}}</li>
                <li>Birthday: {{T.date_of_birth}}</li>
                <li>Articles number: {{T.article_count}}</li>
                <li>Likes number: {{T.likes_count}}</li>
                <li>Follower number: {{T.Follower_count}}</li>
                <li>Following number: {{T.Following_count}}</li>
            </ul>
        </div>
        {{/if}}
        {{#if articles}}
        <div class="grid-favArticles">
            {{#each articles}}
            {{!-- <div class="grid-content"> --}}
                <div class="card2">
                    <br>
                    <h3>{{{this.title}}}</h3>
                    <p>{{this.authorname}}</p>
                    <p>{{this.date_time}}</p>
                    <div class="limit_container">
                        <p class="limit_content">{{{this.content}}}</p>
                    </div>
                    <div class="actions">

                        <form action="./article" method="get">
                            <button type="submit" class="readMore" name="fullArticle" value="{{this.id}}">Read more</button>
                        </form>

                        {{#if this.isLiked}}
                        <form action="./removeCollect" method="get">
                            <button type="submit" class="likes" name="likeAction" value="{{this.id}}"><img
                                    src="./images/black favorite.png" width="40px"></button>
                        </form>
                        {{else}}
                        <form action="./addCollect" method="get">
                            <button type="submit" class="likes" name="likeAction" value="{{this.id}}"><img
                                    src="./images/outline favorite.png" width="40px"></button>
                        </form>
                        {{/if}}

                    </div>
                    <div class="actions">
                        {{#if this.canModify}}
                        <form action="./addarticle" method="get"><button id="editProfile" name="edit" value="{{this.id}}">Edit</button></form>
                        <form action="./deleteArticle" method="get"><button id="deleteProfile" name="delete" value="{{this.id}}">Delete</button></form>
                        {{/if}}
                    </div>
                </div>
                {{!--
            </div> --}}
            {{/each}}
        </div>
        {{else}}
        <p class="noneWritten">Oops, user hasn't written articlesðŸ˜‚</p>
        {{/if}}
</div>