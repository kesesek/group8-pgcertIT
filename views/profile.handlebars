<div class="main-container">
    <div class="main-content">
        {{#if articles}}
        <div class="grid-favArticles">
            {{#each articles}}
            {{!-- <div class="grid-content"> --}}
                <div class="card">
                    <p>{{{this.title}}}</p>
                    <p>{{this.authorname}}</p>
                    <p>{{this.date_time}}</p>
                    <p>{{{this.content}}}</p>
                    <form action="./article" method="get">
                        <button type="submit" class="readMore" name="fullArticle" value="{{this.id}}">Read more</button>
                    </form>
                    <div class="favorite">
                        {{#if this.canModify}}
                        <form action="./addarticle" method="get"><button id="editProfile" name="edit" value="{{this.id}}">Edit</button></form>
                        <form action="./deleteArticle" method="get"><button id="deleteProfile" name="delete" value="{{this.id}}">Delete</button></form>
                        {{/if}}
                        {{#if this.isLiked}}
                        <form action="./removeCollect" method="get">
                            <button type="submit" class="likes" name="likeAction" value="{{this.id}}"><img src="./images/black favorite.png" width="40px"></button>
                        </form>
                        {{else}}
                        <form action="./addCollect" method="get">
                            <button type="submit" class="likes" name="likeAction" value="{{this.id}}"><img src="./images/outline favorite.png" width="40px"></button>
                        </form>
                        {{/if}}
                    </div>
                </div>
                {{!--
            </div> --}}
            {{/each}}
        </div>
        {{else}}
        <p class="noneWritten">Oops, user hasn't written articlesðŸ˜‚</p>
        {{/if}}
    </div>
</div>