<div class="follow-container">
    {{#if follower}}
    <ul>
        {{#each follower}}
        <li>
            <form action="./profile" method="get">
                <button type="submit" class="bTn2" name="otherUserId" value="{{this.id}}"><img src="./images/icons/{{this.filename}}" width="40"><span>{{this.username}}</span></button>
            </form>
            <form action="./nofollower" method="get">
                <br>
                <button type="submit" class="bTn" name="bTn" value="{{this.id}}">Remove</button>
            </form>
        </li><br>
        {{/each}}
    </ul>
    {{else}}
        <p class="noneFollow">You've no follower yetðŸ˜­</p>
    {{/if}}
</div>