<div class="article-container">
    <h1>{{{article.title}}}</h1>
    <h3>{{article.timestamp}}</h3>
    <p><a href="" class="icon"><img src="./images/icons/{{article.path}}" width="40px"></a>
        <div href="" class="subscribeStatus">
            {{#if subscribe}}
            <form action="./unsubscribe" method="get">
                <button type="submit" class="subscribe" name="subscribeOrNot" value="{{article.articleId}}">unsubscribe</button>
            </form>
            {{else}}
            <form action="./subscribe" method="get">
                <button type="submit" class="subscribe" name="subscribeOrNot" value="{{article.articleId}}">subscribe</button>
            </form>
            {{/if}}
        </div>
    </p>
    <div class="article-content">
        <p>{{{article.content}}}</p>
    </div>
</div>

