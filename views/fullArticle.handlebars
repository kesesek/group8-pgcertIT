<div>
    {{#if deleteNoAccess}}
    <p class="hint-message">{{deleteNoAccess}}</p>
    {{/if}}
    <p class="hint-message"></p>
</div>
<div class="article-container">
    <h1>{{{article.title}}}</h1>
    <h3>{{article.timestamp}}</h3>
    <p><a href="" class="icon"><img src="./images/icons/{{article.path}}" width="40px"></a>
    <div href="" class="subscribeStatus">
        {{#if subscribe}}
        <form action="./unsubscribe" method="get">
            <button type="submit" class="subscribe" name="subscribeOrNot"
                value="{{article.articleId}}">unsubscribe</button>
        </form>
        {{else}}
        <form action="./subscribe" method="get">
            <button type="submit" class="subscribe" name="subscribeOrNot"
                value="{{article.articleId}}">subscribe</button>
        </form>
        {{/if}}
    </div>
    </p>
    <div class="article-content">
        <p>{{{article.content}}}</p>
        {{#if imagePath}}
        <p class="article-image"><img src="./images/uploadedFiles/{{imagePath}}" width="500px"></p>
        {{/if}}
    </div>
</div>

<div class="comments-container">
    <div class="others-comments">
        <p class="hide-or-show"><a class="hideButton">Hide Comments</a></p>
    </div>
    <div class="comments-block" id="comments">
    </div>
    <div class="comment-content">
        <p class="user-comment"><a href="" class="icon"><img
                    src="./images/icons/{{#if iconpath}}{{iconpath}}{{else}}panda.png{{/if}}" width="40px"></a></p>
        <div id="commentEditor" style="width: 82.5%;">
            <form action="./commentArticle" method="get">
                <textarea name="comment" class="commentContent" placeholder="Any comments?" rows="4" cols="100" required></textarea><br>
                <button type="submit" id="commentButton" name="articleId" value="{{article.articleId}}">Submit</button>
            </form>
        </div>
    </div>
</div>